{
  "name": "pastify",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/bundle-main.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --module-bind 'node=node-loader' && electron-builder",
    "rebuild": "electron-rebuild",
    "dev": "cross-env NODE_ENV=development webpack --module-bind 'node=node-loader' && cross-env NODE_ENV=development webpack-dev-server  --module-bind 'node=node-loader'",
    "prod": "cross-env NODE_ENV=production webpack --module-bind 'node=node-loader' && electron .",
    "robot": "npm rebuild --runtime=electron --target=4.1.4 --disturl=https://atom.io/download/atom-shell --abi=69"
  },
  "build": {
    "productName": "Pastify",
    "appId": "com.pastify.desktop",
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "src/icon/icon.ico",
      "target": "portable"
    },
    "files": [
      "dist/*",
      "./src/icon/icon.*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.11",
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-regular-svg-icons": "^5.9.0",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@svgr/webpack": "^4.2.0",
    "@uiw/react-monacoeditor": "^1.0.6",
    "ace-builds": "^1.4.7",
    "array-sort": "^1.0.0",
    "babel-loader": "^8.0.5",
    "babili-webpack-plugin": "^0.1.2",
    "brace": "^0.11.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "electron-load-devtool": "^1.2.0",
    "electron-react-titlebar": "^0.8.1",
    "electron-rebuild": "^1.8.4",
    "electron-titlebar": "^0.0.3",
    "electron-titlebar-windows": "^3.0.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "iconv-lite": "^0.4.24",
    "immutable": "^4.0.0-rc.12",
    "iohook": "^0.4.5",
    "keycode": "^2.2.0",
    "lodash": "^4.17.11",
    "lowdb": "^1.0.0",
    "maxlength-contenteditable": "^1.0.1",
    "moment": "^2.24.0",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "mori": "^0.3.2",
    "node-key-sender": "^1.0.11",
    "node-loader": "^0.6.0",
    "raw-loader": "^2.0.0",
    "rc-menu": "^8.0.0-alpha.5",
    "rc-tooltip": "^3.7.3",
    "react": "^16.8.6",
    "react-ace": "7.0.1",
    "react-clamp-lines": "^3.0.2",
    "react-contenteditable": "^3.2.6",
    "react-contextmenu": "^2.13.0",
    "react-dom": "^16.8.6",
    "react-electron-titlebar": "^1.0.7",
    "react-eva-icons": "^0.0.7",
    "react-hot-loader": "^4.8.4",
    "react-imask": "^5.1.5",
    "react-inlinesvg": "^0.8.4",
    "react-input-autosize": "^2.2.1",
    "react-redux": "^7.0.3",
    "react-select": "^3.0.4",
    "react-svg-inline": "^2.1.1",
