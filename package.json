    "responsive-react-monaco-editor": "^0.1.3",
    "robotjs": "^0.5.1",
    "rodal": "^1.6.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.1",
    "shortid": "^2.2.14",
    "style-loader": "^0.23.1",
    "styled-components": "^4.2.0",
    "svg-inline-loader": "^0.8.0",
    "ttf-loader": "^1.0.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "ffi": "^2.3.0",
    "ref": "^1.3.5"
  },
  "iohook": {
    "targets": [
      "node-64",
      "electron-69"
    ],
    "platforms": [
      "win32"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  }
}
